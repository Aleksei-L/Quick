<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.DetailActivity">

	<include
		android:id="@+id/toolbar"
		layout="@layout/toolbar" />

	<TextView
		android:id="@+id/info_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginTop="40dp"
		android:textSize="32sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/toolbar"
		tools:text="Title example" />

	<ImageView
		android:id="@+id/info_priority"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:importantForAccessibility="no"
		app:layout_constraintBottom_toBottomOf="@id/info_title"
		app:layout_constraintStart_toEndOf="@id/info_title"
		app:layout_constraintTop_toTopOf="@id/info_title"
		tools:src="@drawable/ic_priority_high" />

	<TextView
		android:id="@+id/info_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginTop="24dp"
		android:textSize="20sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/info_title"
		tools:text="Description example" />

</androidx.constraintlayout.widget.ConstraintLayout>
